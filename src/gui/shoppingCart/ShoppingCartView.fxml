<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.effect.ImageInput?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.shoppingCart.ShoppingCartController">
	<bottom>
		<Pane prefHeight="112.0" prefWidth="1024.0" BorderPane.alignment="CENTER">
			<children>
            <Label fx:id="totalQuantity" layoutX="676.0" layoutY="57.0" prefHeight="21.0" prefWidth="80.0" />
				<Label layoutX="769.0" layoutY="56.0" prefHeight="21.0" prefWidth="127.0" text="Total Price:">
					<font>
						<Font name="System Bold" size="15.0" />
					</font>
				</Label>
				<Label fx:id="totalPrice" layoutX="897.0" layoutY="55.0" prefHeight="21.0" prefWidth="127.0" />
            <Label layoutX="549.0" layoutY="55.0" prefHeight="21.0" prefWidth="127.0" text="Total Quantity:">
               <font>
                  <Font name="Calibri Bold" size="18.0" />
               </font>
            </Label>
			</children>
		</Pane>
	</bottom>
	<center>
		<TableView fx:id="shoppingCart" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
			<columns>
				<TableColumn fx:id="categoryColumn" prefWidth="210.0" resizable="false" text="Category" />
				<TableColumn fx:id="descriptionColumn" prefWidth="450.0" resizable="false" text="Description" />
				<TableColumn fx:id="quantityColumn" minWidth="0.0" resizable="false" text="Quantity" />
				<TableColumn fx:id="discountColumn" prefWidth="150.0" resizable="false" text="Discount" />
				<TableColumn fx:id="unitPriceColumn" minWidth="0.0" prefWidth="127.0" text="Price" />
			</columns>
			<columnResizePolicy>
				<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
			</columnResizePolicy>
		</TableView>
	</center>
	<top>
		<Pane prefHeight="127.0" prefWidth="1024.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="deleteButton" layoutX="900.0" layoutY="14.0" mnemonicParsing="false" onAction="#trashEvent" prefHeight="40.0" prefWidth="110.0" text="Remove item">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font></Button>
            <ToggleButton layoutX="384.0" layoutY="14.0" mnemonicParsing="false" prefHeight="59.0" prefWidth="97.0" text="ToggleButton">
               <effect>
                  <ImageInput />
               </effect>
            </ToggleButton>
         </children></Pane>
	</top>
</BorderPane>
